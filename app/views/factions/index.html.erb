<p id="notice"><%= notice %></p>

<h1>Listing Factions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Points</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @factions.each do |faction| %>
      <tr>
        <td><%= faction.name %></td>
        <td><%= faction.type %></td>
        <td><%= faction.points %></td>
        <td><%= faction.color %></td>
        <td><%= link_to 'Show', faction %></td>
        <td><%= link_to 'Edit', edit_faction_path(faction) %></td>
        <td><%= link_to 'Destroy', faction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

